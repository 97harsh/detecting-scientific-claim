{
    "dataset_reader": {
      "type": "crf_pubmed_rct"
    },
    "train_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/train.txt",
    "validation_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/dev.txt",
    "test_data_path": "https://s3-us-west-2.amazonaws.com/pubmed-rct/test.txt",
    "model": {
      "type": "discourse_crf_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": false
        }
      },
      "sentence_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 300,
        "hidden_size": 300,
        "num_layers": 1,
        "dropout": 0.2
      },
      "classifier_feedforward": {
        "input_dim": 600,
        "num_layers": 2,
        "hidden_dims": [300, 5],
        "activations": ["relu", "linear"],
        "dropout": [0.2, 0.0]
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["sentences", "num_fields"]],
      "batch_size": 64
    },
    "trainer": {
      "num_epochs": 40,
      "patience": 10,
      "cuda_device": -1,
      "grad_clipping": 5.0,
      "validation_metric": "+accuracy",
      "optimizer": {
        "type": "adagrad"
      }
    }
  }
  

